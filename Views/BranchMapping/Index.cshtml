@model LKP_Frontend_MVC.Models.Response.Common.ResponsePayLoad;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Branch CNT Mapping";
    var branchCNTList = Model.data as List<LKP_Frontend_MVC.Models.Response.BranchCNT.BranchCNTResponse>;
    var inputModel = Model.message as LKP_Frontend_MVC.Models.Request.Common.PageInputModel;
}
<head>
    <link rel="stylesheet" href="~/css/common.css" asp-append-version="true" />
</head>
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>CNT Terminal Mapping</h2>
        <div class="d-flex align-items-end gap-2">
            <a href="@Url.Action("Index", "BranchMapping")" class="btn btn-secondary p-2" style="width: 60px; height: 40px;">
                Clear
            </a>
            <div class="d-flex gap-2 align-items-end">
                <form id="filterForm" method="post" action="/BranchMapping/Index">
                    <div class="d-flex gap-2 align-items-end">
                        <div>
                            <label for="filterField" class="form-label">Filter</label>
                            <select id="filterField" name="filterField" class="form-select" required style="width: 150px;">
                                <option value="Zone" selected="@(inputModel?.Zone != "" ? "selected" : null)">Zone</option>
                                <option value="DealerID" selected="@(inputModel?.DealerID != "" ? "selected" : null)">Dealer Code</option>
                                <option value="DealerName" selected="@(inputModel?.DealerName != "" ? "selected" : null)">Dealer Name</option>
                            </select>
                        </div>

                        <div>
                            <label for="filterValue" class="form-label">Value</label>
                            <input type="text" id="filterValue" class="form-control" value="@(
                            !string.IsNullOrEmpty(inputModel?.DealerID) ? inputModel.DealerID.Trim() :
                            !string.IsNullOrEmpty(inputModel?.DealerName) ? inputModel.DealerName.Trim() :
                            inputModel?.Zone.Trim())"
                                   style="width: 15em;" />
                        </div>

                        <input type="hidden" id="dynamicInput" name="" value="" />
                        <button type="submit" class="btn btn-primary p-2 modal-btn" style="width: 40px; height: 40px;">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>
                <button class="btn btn-primary modal-btn" data-bs-toggle="modal" data-bs-target="#addBranchModal" >Add New</button>
            </div>
        </div>

       
        
    </div>

    @if(branchCNTList.Count > 0) {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Zone</th>
                    <th>Dealer ID</th>
                    <th>Dealer Name</th>
                    <th>CTCL Login</th>
                    <th>HO CNT</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in branchCNTList)
                {
                    <tr data-rowid="@item.RowId">
                        <td>@item.Zone</td>
                        <td>@item.DealerID</td>
                        <td>@item.DealerName</td>
                        <td>@item.CTCLLoginID</td>
                        @if(item.isHOCNT == 1)
                        {
                            <td>Yes</td>
                        } else
                        {
                            <td>No</td>
                        }

                        <td>
                            <div class="d-flex justify-content-evenly">
                                <button class="btn btn-sm btn-outline-warning update-btn"
                                        data-id="@item.RowId"
                                        title="Update"
                                        data-bs-toggle="modal"
                                        data-bs-target="#updateBranchModal">
                                    <i class="fas fa-pen"></i>
                                </button>
                                <button id="deleteBranchBtn"
                                        class="btn btn-sm btn-outline-danger delete-btn"
                                        data-id="@item.RowId"
                                        title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    } else
    {
        <div class="no-records">
            <i class="bi bi-folder-x icon"></i>
            <h5>No Records Found</h5>
            <p>Try adjusting your filters or check back later.</p>
        </div>

    }
</div>

@*Create Branch Modal*@
<div class="modal fade" id="addBranchModal" tabindex="-1" aria-labelledby="addBranchModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="branchForm" method="post" action="/BranchMapping/CreateMapping">
                <input type="hidden" name="RowId" id="rowIdInput" />
                <div class="modal-header">
                    <h5 class="modal-title" id="addBranchModalLabel">Add Branch Mapping</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Zone</label>
                        <select id="zoneDropdown" class="form-select" name="Zone" required>
                            <option value="">Select Zone</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Dealer</label>
                        <select id="dealerDropdown" class="form-select" name="DealerName" required>
                            <option value="">Select Dealer</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Dealer ID</label>
                        <input type="text" class="form-control" name="DealerID" value="-" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">CTCL Login</label>
                        <input type="text" class="form-control" name="CtclLoginId" value="-" readonly />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success modal-btn">Save Mapping</button>
                </div>
            </form>
        </div>
    </div>
</div>

@*Update Branch Modal*@
<div class="modal fade" id="updateBranchModal" tabindex="-1" aria-labelledby="updateBranchModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="updateBranchForm" method="post" action="/BranchMapping/UpdateMapping">
                <input type="hidden" name="RowId" id="rowIdInputUpdate" />
                <div class="modal-header">
                    <h5 class="modal-title">Update Branch Mapping</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label>Zone</label>
                        <select id="zoneDropdownUpdate" class="form-select readonly-select" name="Zone" readonly required>
                            <!-- Only one zone value should appear here, and it will be disabled -->
                        </select>
                    </div>
                    <div class="mb-3">
                        <label>Dealer</label>
                        <select id="dealerDropdownUpdate" class="form-select" name="DealerName" required>
                            <option value="">Select Dealer</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label>Dealer ID</label>
                        <input type="text" class="form-control" name="DealerID" readonly />
                    </div>
                    <div class="mb-3">
                        <label>CTCL Login</label>
                        <input type="text" class="form-control" name="CtclLoginId" readonly />
                    </div>
                </div>

                <div class="modal-footer" >
                    <button type="submit" class="btn btn-warning modal-btn">
                        Update Mapping
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@* Confrim Delete Modal *@
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this mapping?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button id="confirmDeleteBtn" type="button" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>
<!--Creation success/failure toast -->
<div id="toastData"
     data-success="@TempData["SuccessMessage"]"
     data-error="@TempData["ErrorMessage"]"
     data-showtoast="@TempData["ShowToast"]">
</div>

<div class="toast-container position-fixed top-50 start-50 translate-middle p-3" style="z-index: 1100;">
    <div id="messageToast"
         class="toast align-items-center text-white border-0"
         role="alert"
         aria-live="assertive"
         aria-atomic="true">
        <div id="toastHeader" class="toast-header bg-danger text-white">
            <strong class="me-auto">Error</strong>
            <button type="button" class="btn-close btn-close-white ms-2 mb-1" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div id="toastBody" class="toast-body">
        </div>
    </div>
</div>

<div class="d-flex justify-content-between mt-4">
    @if (ViewBag.CurrentPage > 1)
    {
        <a class="btn btn-secondary modal-btn"
           href="@Url.Action("Index", new {
           start = ViewBag.CurrentPage - 1,
           pageSize = ViewBag.PageSize
        })">
            &laquo; Previous
        </a>
    }
    @if (branchCNTList.Count >= 50)
    {
        <a class="btn btn-primary modal-btn"
           href="@Url.Action("Index", new {
           start = ViewBag.CurrentPage + 1,
           pageSize = ViewBag.PageSize
        })">
            Next &raquo;
        </a>
    }
</div>

@section Scripts {
    
   
    <script src="~/js/branch/branch-mapping.js"></script>
    <script src="~/js/branch/branch-actions.js"></script>
    <script src="~/js/common/filter.js"></script>
    <script src="~/js/common/toast-message.js"></script>

}
