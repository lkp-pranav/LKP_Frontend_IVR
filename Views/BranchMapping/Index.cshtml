@model LKP_Frontend_MVC.Models.Response.Common.ResponsePayLoad;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Branch CNT Mapping";
    var branchCNTList = Model.data as List<LKP_Frontend_MVC.Models.Response.BranchCNT.BranchCNTResponse>;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Branch Mapping</h2>
        <button class="btn btn-primary" style="background-color: #11395C !important; color: white !important;" data-bs-toggle="modal" data-bs-target="#addBranchModal">Add New</button>
    </div>

    <table class="table table-bordered table-striped">
        <thead style="background-color: #11395C !important; color: white !important;">
            <tr>
                <th>Zone</th>
                <th>Dealer ID</th>
                <th>Dealer Name</th>
                <th>CTCL Login</th>
                <th>HO CNT</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in branchCNTList)
            {
                <tr data-rowid="@item.RowId">
                    <td>@item.Zone</td>
                    <td>@item.DealerID</td>
                    <td>@item.DealerName</td>
                    <td>@item.CTCLLoginID</td>
                    <td>@item.isHOCNT</td>
                    <td>
                        <button id="updateBranchBtn" class="btn btn-sm btn-outline-warning me-2 update-btn" data-id="@item.RowId" title="Update">
                            <i class="fas fa-pen"></i>
                        </button>
                        <button id="deleteBranchBtn" class="btn btn-sm btn-outline-danger delete-btn" data-id="@item.RowId" title="Delete">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="addBranchModal" tabindex="-1" aria-labelledby="addBranchModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="branchForm" method="post" action="/BranchMapping/CreateMapping">
                <input type="hidden" name="RowId" id="rowIdInput" />
                <div class="modal-header">
                    <h5 class="modal-title" id="addBranchModalLabel">Add Branch Mapping</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Zone</label>
                        <select id="zoneDropdown" class="form-select" name="Zone" required>
                            <option value="">Select Zone</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Dealer</label>
                        <select id="dealerDropdown" class="form-select" name="DealerName" required>
                            <option value="">Select Dealer</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Dealer ID</label>
                        <input type="text" class="form-control" name="DealerID" value="-" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">CTCL Login</label>
                        <input type="text" class="form-control" name="CtclLoginId" value="-" readonly />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success" style="background-color: #11395C !important; color: white !important;">Save Mapping</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/branch-actions.js"></script>
    <script src="~/js/branch-mapping.js"></script>
}
