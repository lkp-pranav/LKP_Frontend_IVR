@model LKP_Frontend_MVC.Models.Response.Common.ResponsePayLoad;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Custom Groups";
    var groupList = Model.data as List<LKP_Frontend_MVC.Models.Response.CustomGroup.CustomGroupResponse>;
    var inputModel = Model.message as LKP_Frontend_MVC.Models.Request.CustomGroup.CustomGroupFilterModel;
}
<head>
    <link rel="stylesheet" href="~/css/common.css" asp-append-version="true" />
</head>
<style>
    .info-btn {
        border: none;
        background: none;
    }
</style>   
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Custom Group</h2>
        <div class="d-flex align-items-end gap-2">
            <a href="@Url.Action("Index", "CustomGroup")" class="btn btn-secondary p-2" style="width: 60px; height: 40px;">
                Clear
            </a>
            <form id="filterForm" method="post" action="/CustomGroup/Index">
                <div class="d-flex gap-2 align-items-end">
                    <div>
                        <label for="filterField" class="form-label">Filter</label>
                        <select id="filterField" name="filterField" class="form-select" required style="width: 150px;">
                            <option value="GroupCode" selected="@(inputModel?.GroupCode!= "" ? "selected" : null)">GroupCode</option>
                            <option value="Zone" selected="@(inputModel?.Zone != "" ? "selected" : null)">Zone</option>
                            <option value="branch" selected="@(inputModel?.branch != "" ? "selected" : null)">Branch</option>

                        </select>
                    </div>

                    <div>
                        <label for="filterValue" class="form-label">Value</label>
                        <input type="text" id="filterValue" class="form-control" value="@(
                            !string.IsNullOrEmpty(inputModel?.GroupCode) ? inputModel.GroupCode.Trim() :
                            !string.IsNullOrEmpty(inputModel?.branch) ? inputModel.branch.Trim() :
                            inputModel?.Zone.Trim())"
                               style="width: 15em;" />
                    </div>

                    <input type="hidden" id="dynamicInput" name="" value="" />
                    <button type="submit" class="btn btn-primary p-2 modal-btn" style="width: 40px; height: 40px;">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </form>
            <button class="btn btn-primary modal-btn" data-bs-toggle="modal" data-bs-target="#addCustomGroup">Add New</button>
        </div>
        
    </div>

    @if (groupList.Count > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Group Code</th>
                    <th>Zone</th>
                    <th>Branch</th>
                    <th>Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in groupList)
                {
                    <tr data-rowid="@item.GroupCode">
                        <td>
                            @item.GroupCode
                            <button class="info-btn"
                                    data-bs-target="#groupInfoModal"
                                    data-bs-toggle="modal"
                                    data-id="@item.GroupCode"
                                    data-zone="@item.Zone"
                                    data-branch="@item.Branch"
                                    data-active="@item.Active"
                            >
                                <i class="bi bi-info-circle-fill"></i>
                            </button>
                        </td>
                        <td>@item.Zone</td>
                        <td>@item.Branch</td>
                        <td>@item.Active</td>
                        

                        <td>
                            <div class="d-flex justify-content-evenly">
                                <button class="btn btn-sm btn-outline-warning update-btn"
                                        data-id="@item.GroupCode"
                                        title="Update"
                                        data-bs-toggle="modal"
                                        data-bs-target="#updateCustomGroup">
                                    <i class="fas fa-pen"></i>
                                </button>
                                <button id="deleteCustomGroupBtn"
                                        class="btn btn-sm btn-outline-danger delete-btn"
                                        data-id="@item.GroupCode"
                                        title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="no-records">
            <i class="bi bi-folder-x icon"></i>
            <h5>No Records Found</h5>
            <p>Try adjusting your filters or check back later.</p>
        </div>

    }
    <div class="d-flex justify-content-between mt-4">
        @if (inputModel?.Start > 1)
        {
            <a class="btn btn-secondary"
               href="@Url.Action("Index", new {
                    Start = inputModel.Start - 1,
                    PageSize = inputModel.PageSize,
                    GroupCode = inputModel.GroupCode,
                    Zone = inputModel.Zone,
                    branch = inputModel.branch
            })">
                &laquo; Previous
            </a>
        }
        @if (groupList?.Count >= 50)
        {
            <a class="btn btn-primary modal-btn"
               href="@Url.Action("Index", new {
                Start = inputModel.Start + 1,
                PageSize = inputModel.PageSize,
                GroupCode = inputModel.GroupCode,
                Zone = inputModel.Zone,
                branch = inputModel.branch
            })">
                Next &raquo;
            </a>
        }
    </div>
</div>



@* Confrim Delete Modal *@
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this Custom Group?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button id="confirmDeleteBtn" type="button" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>


@*Create Custom Group Modal*@
<div class="modal fade" id="addCustomGroup" tabindex="-1" aria-labelledby="addCustomGroup" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="customGroupForm" method="post" action="">
                <input type="hidden" name="RowId" id="rowIdInput" />
                <div class="modal-header">
                    <h5 class="modal-title" id="addBranchModalLabel">Create Custom Group</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Group Code</label>
                        <input id="groupCode" type="text" class="form-control" name="GroupCode" value="" placeholder="Enter Group Code" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Zone</label>
                        <select id="zoneDropdown" class="form-select" name="Zone" required>
                            <option value="">Select Zone</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Branch</label>
                        <select id="branchDropdown" class="form-select" name="Branch" required>
                            <option value="">Select Branch</option>
                        </select>
                    </div>
                    <div id="dealerContainer" class="form-check-group mb-3 overflow-auto" style="max-height: 150px;">
                        <label class="form-label">Dealer List</label>
                        <div id="dealerList" class="form-check">

                        </div>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="activeCheckbox" name="Active" value="Y" checked>
                        <label class="form-check-label" for="activeCheckbox">Active</label>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success modal-btn">Create Group</button>
                </div>
            </form>
        </div>
    </div>
</div>

@* Update Custom Group Modal*@
<div class="modal fade" id="updateCustomGroup" tabindex="-1" aria-labelledby="updateCustomGroup" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="customGroupFormUpdate" method="post" action="">
                <div class="modal-header">
                    <h5 class="modal-title" id="addBranchModalLabel">Update Custom Group</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Group Code</label>
                        <input id="groupCodeUpdate" type="text" class="form-control" name="GroupCode" value="" placeholder="Enter Group Code" required  readonly/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Zone</label>
                        <select id="zoneDropdownUpdate" class="form-select" name="Zone" required>
                            <option value="">Select Zone</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Branch</label>
                        <select id="branchDropdownUpdate" class="form-select" name="Branch" required>
                            <option value="">Select Branch</option>
                        </select>
                    </div>
                    <div id="dealerContainerUpdate" class="form-check-group mb-3 overflow-auto" style="max-height: 150px;">
                        <label class="form-label">Dealer List</label>
                        <div id="dealerListUpdate" class="form-check">
                        </div>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="activeCheckboxUpdate" name="Active">
                        <label class="form-check-label" for="activeCheckboxUpdate">Active</label>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success modal-btn">Update Group</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="groupInfoModal" tabindex="-1" aria-labelledby="groupInfoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered ">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="groupInfoModalLabel">Group Info: <span id="groupCodeSpan"></span></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/custom-group/fetchData.js"></script>
    <script src="~/js/custom-group/groupInfo.js"></script>
    <script src="~/js/common/filter.js"></script>
    <script src="~/js/custom-group/delete-group.js"></script>
    <script src="~/js/custom-group/update-group.js"></script>
}
