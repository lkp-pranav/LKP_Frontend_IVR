@using LKP_Frontend_MVC.Models.Request.Login
@model LoginInputModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/common.css" asp-append-version="true" />

    <style>
        body {
            background-color: #f4f7fa;
        }

        .login-card {
            width: 100%;
            max-width: 400px;
            border: none;
            border-radius: 10px;
            overflow: hidden;
        }

        .logo-header {
            background-color: #11395C;
            padding: 1rem;
            text-align: center;
        }

            .logo-header img {
                height: 60px;
            }

        .login-btn {
            background-color: #11395C !important;
            color: white !important;
            font-size: 1.1rem;
            font-weight: 600;
        }

        .form-label {
            font-weight: 600;
            color: #11395C;
        }

        .card-body {
            padding: 2rem;
        }
    </style>
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="card login-card shadow">
            <div class="logo-header">
                <img src="~/static/logo.png" alt="LKP Logo">
            </div>
            <div class="card-body">
                <form method="post" action="/Login/Login">
                    <div class="mb-3">
                        <label class="form-label">User Type</label>
                        <input type="text" class="form-control" name="User_type" required />
                        @if (ViewBag.isSuccess == false)
                        {
                            <span>Error</span>
                        }
                      
                    </div>
                    <div class="mb-3">
                        <label class="form-label">User Id</label>
                        <input type="text" class="form-control" name="User_id" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input type="password" class="form-control" name="User_password" required />
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn login-btn">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

</html>