@{
    Layout = null;
    ViewData["Title"] = "Verify PAN";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f4f7fa;
        }

        .verify-card {
            width: 100%;
            max-width: 400px;
            border: none;
            border-radius: 10px;
            overflow: hidden;
        }

        .logo-header {
            background-color: #11395C;
            padding: 1rem;
            text-align: center;
        }

        .logo-header img {
            height: 60px;
        }

        .verify-btn {
            background-color: #11395C !important;
            color: white !important;
            font-size: 1.1rem;
            font-weight: 600;
        }

        .form-label {
            font-weight: 500;
            color: #11395C;
        }

        .card-body {
            padding: 2rem;
        }
    </style>
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="card verify-card shadow">
            <div class="logo-header">
                <img src="~/static/logo.png" alt="LKP Logo">
            </div>
            <div class="card-body">
                <h4 class="text-center mb-4" style="color: #11395C;">Enter PAN Number</h4>
                <form method="post" action="/Login/AuthenticatePan">
                    <div class="mb-3">
                        <label class="form-label">PAN Number</label>
                        <input type="text" class="form-control" name="pan" required />
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn verify-btn">Verify</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
