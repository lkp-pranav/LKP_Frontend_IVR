@model LKP_Frontend_MVC.Models.Response.Common.ResponsePayLoad;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Dealer Mapping";
    var dealerCNTList= Model.data as List<LKP_Frontend_MVC.Models.Response.DealerCNT.DealerCNTResponse>;
}
<head>
    <link rel="stylesheet" href="~/css/common.css" asp-append-version="true" />
</head>
<!-- Page Content -->
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Dealer Mapping</h2>
        <button class="btn btn-primary modal-btn" data-bs-toggle="modal" data-bs-target="#addDealerModal">Add New</button>
    </div>
    @if(dealerCNTList.Count > 0) {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Zone</th>
                    <th>Primary Dealer</th>
                    <th>Primary Dealer Name</th>
                    <th>Primary CTCL Login</th>
                    <th>Secondary Dealer</th>
                    <th>Secondary Dealer Name</th>
                    <th>Secondary CTCL Login</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in dealerCNTList)
                {
                    <tr data-rowid="@item.RowId">
                        <td>@item.Zone</td>
                        <td>@item.PrimaryDealer</td>
                        <td>@item.PrimaryDealerName</td>
                        <td>@item.PrimaryDealerCTCLLogin</td>
                        <td>@item.SecondaryDealer</td>
                        <td>@item.SecondaryDealerName</td>
                        <td>@item.SecondaryDealerCTCLLogin</td>
                        <td>
                            <button 
                            id="updateBranchBtn" 
                            class="btn btn-sm btn-outline-warning update-btn" 
                            data-id="@item.RowId" 
                            title="Update"
                            data-bs-toggle="modal" data-bs-target="#updateDealerModal">
                                <i class="fas fa-pen"></i>
                            </button>
                            <button id="deleteBranchBtn" class="btn btn-sm btn-outline-danger delete-btn" data-id="@item.RowId" title="Delete">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    } else
    {
        <div class="no-records">
            <i class="bi bi-folder-x icon"></i>
            <h5>No Records Found</h5>
            <p>Try adjusting your filters or check back later.</p>
        </div>

    }
</div>

<!-- Creation Modal -->
<div class="modal fade" id="addDealerModal" tabindex="-1" aria-labelledby="addDealerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <form id="addDealerForm" method="post" action="/DealerMapping/CreateMapping">
                <div class="modal-header">
                    <h5 class="modal-title" id="addDealerModalLabel">Add Dealer Mapping</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <!-- Zone -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Zone</label>
                            <select id="zoneDropdownCreate" class="form-select" name="Zone" required>
                                <option value="">Select Zone</option>
                            </select>
                        </div>
                    </div>

                    <!-- Dealer dropdowns -->
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Primary Dealer</label>
                            <select id="primaryDealerDropdownCreate" class="form-select" name="PrimaryDealerName">
                                <option value="">Select Dealer</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Secondary Dealer</label>
                            <select id="secondaryDealerDropdownCreate" class="form-select" name="SecondaryDealerName" disabled>
                                <option value="">Select Dealer</option>
                            </select>
                        </div>

                        <!-- Dealer IDs -->
                        <div class="col-md-6">
                            <label class="form-label">Primary Dealer ID</label>
                            <input type="text" class="form-control" id="primaryDealerIdCreate" name="PrimaryDealer" value="-" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Secondary Dealer ID</label>
                            <input type="text" class="form-control" id="secondaryDealerIdCreate" name="SecondaryDealer" value="-" readonly />
                        </div>

                        <!-- CTCL Logins -->
                        <div class="col-md-6">
                            <label class="form-label">Primary CTCL Login</label>
                            <input type="text" class="form-control" id="primaryCTCLCreate" name="PrimaryDealerCTCLLogin" value="-" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Secondary CTCL Login</label>
                            <input type="text" class="form-control" id="secondaryCTCLCreate" name="SecondaryDealerCTCLLogin" value="-" readonly />
                        </div>

                        <!-- Segments -->
                        <div class="col-md-6">
                            <label class="form-label">Primary Segment</label>
                            <input type="text" id="primarySegmentCreate" name="PrimarySegment" class="form-control" value="-" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Secondary Segment</label>
                            <input type="text" id="secondarySegmentCreate" name="SecondarySegment" class="form-control" value="-" readonly />
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success modal-btn">Save Mapping</button>
                </div>
            </form>
        </div>
    </div>
</div>

@* Update Modal *@
<div class="modal fade" id="updateDealerModal" tabindex="-1" aria-labelledby="updateDealerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <form id="updateDealerForm" method="post" action="/DealerMapping/UpdateMapping">
                <input type="hidden" name="RowId" id="rowIdInputUpdate" />
                <div class="modal-header">
                    <h5 class="modal-title" id="updateDealerModalLabel">Update Dealer Mapping</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <!-- Zone -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Zone</label>
                            <select id="zoneDropdownUpdate" class="form-select readonly-select" name="Zone" readonly required>
                                <option value="">Select Zone</option>
                            </select>
                        </div>
                    </div>

                    <!-- Dealer dropdowns -->
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Primary Dealer</label>
                            <select id="primaryDealerDropdownUpdate" class="form-select readonly-select" name="PrimaryDealerName" readonly>
                                <option value="">Select Dealer</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Secondary Dealer</label>
                            <select id="secondaryDealerDropdownUpdate" class="form-select" name="SecondaryDealerName">
                                <option value="">Select Dealer</option>
                            </select>
                        </div>

                        <!-- Dealer IDs -->
                        <div class="col-md-6">
                            <label class="form-label">Primary Dealer ID</label>
                            <input type="text" class="form-control readonly-select" id="primaryDealerIdUpdate" name="PrimaryDealer" value="-" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Secondary Dealer ID</label>
                            <input type="text" class="form-control" id="secondaryDealerIdUpdate" name="SecondaryDealer" value="-" readonly />
                        </div>

                        <!-- CTCL Logins -->
                        <div class="col-md-6">
                            <label class="form-label">Primary CTCL Login</label>
                            <input type="text" class="form-control readonly-select" id="primaryCTCLUpdate" name="PrimaryDealerCTCLLogin" value="-" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Secondary CTCL Login</label>
                            <input type="text" class="form-control" id="secondaryCTCLUpdate" name="SecondaryDealerCTCLLogin" value="-" readonly />
                        </div>

                        <!-- Segments -->
                        <div class="col-md-6">
                            <label class="form-label">Primary Segment</label>
                            <input type="text" id="primarySegmentUpdate" name="PrimarySegment" class="form-control" value="-" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Secondary Segment</label>
                            <input type="text" id="secondarySegmentUpdate" name="SecondarySegment" class="form-control" value="-" readonly />
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success modal-btn">
                        Update Mapping
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteDealerModal" tabindex="-1" aria-labelledby="deleteDealerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-3">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteDealerModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this mapping?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

<!--Creation success/failure toast -->
<div id="toastData"
     data-success="@TempData["SuccessMessage"]"
     data-error="@TempData["ErrorMessage"]"
     data-showtoast="@TempData["ShowToast"]">
</div>

<div class="toast-container position-fixed top-50 start-50 translate-middle p-3" style="z-index: 1100;">
    <div id="messageToast"
         class="toast align-items-center text-white border-0"
         role="alert"
         aria-live="assertive"
         aria-atomic="true">
        <div id="toastHeader" class="toast-header bg-danger text-white">
            <strong class="me-auto">Error</strong>
            <button type="button" class="btn-close btn-close-white ms-2 mb-1" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div id="toastBody" class="toast-body">
        </div>
    </div>
</div>
<div class="d-flex justify-content-between mt-4">
    @if (ViewBag.CurrentPage > 1)
    {
        <a class="btn btn-secondary"
           href="@Url.Action("Index", new {
           start = ViewBag.CurrentPage - 1,
           pageSize = ViewBag.PageSize
        })">
            &laquo; Previous
        </a>
    }
    @if (dealerCNTList.Count >= 50)
    {
        <a class="btn btn-primary modal-btn"
           href="@Url.Action("Index", new {
           start = ViewBag.CurrentPage + 1,
           pageSize = ViewBag.PageSize
        })">
            Next &raquo;
        </a>
    }
</div>
@section Scripts {
    <script src="~/js/dealer-mapping.js"></script>
    <script src="~/js/fetch-segment.js"></script>
    <script src="~/js/dealer-actions.js"></script>
    <script src="~/js/toast-message.js"></script> 
}

