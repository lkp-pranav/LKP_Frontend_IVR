@model LKP_Frontend_MVC.Models.Response.Common.ResponsePayLoad;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Dealer Mapping";
    var dealerCNTList= Model.data as List<LKP_Frontend_MVC.Models.Response.DealerCNT.DealerCNTResponse>;
    var inputModel = Model.message as LKP_Frontend_MVC.Models.Request.DealerCNT.DealerCNTFilterModel;
}
<head>
    <link rel="stylesheet" href="~/css/common.css" asp-append-version="true" />
</head>

<style>

</style>
<!-- Page Content Start-->
<div class="container-fluid mx-0" style="max-width: 80vw; ">
    <!-- Top Panel Start-->
    <div class="container">
        <div class="row py-2">
            <div class="col-12 col-lg-4 px-3 mb-2 align-middle">
                <h2>Secondary Dealer Mapping</h2>
            </div>
            <div class="col-12 col-lg-6 d-flex justify-content-lg-end justify-content-md-start align-items-center text-white px-3 mb-2 panel-button">
                <div class="pe-2">
                    <a href="@Url.Action("Index", "DealerMapping")" class="btn btn-secondary">Clear</a>
                </div>
                <form id="filterForm" class="d-flex flex-row" action="/DealerMapping/Index" method="post">
                    <select id="filterField" name="filterField" class="form-select" style="width: 150px; max-height: 50px" required>
                        <option value="Zone" selected="@(inputModel?.Zone != "" ? "selected" : null)">Zone</option>
                        <option value="PrimaryDealer" selected="@(inputModel?.PrimaryDealer != "" ? "selected" : null)">Primary Dealer ID</option>
                        <option value="PrimaryCTCL" selected="@(inputModel?.PrimaryCTCL != "" ? "selected" : null)">Primary CLTCL</option>
                        <option value="SecondaryDealer" selected="@(inputModel?.SecondaryDealer != "" ? "selected" : null)">Secondary Dealer ID</option>
                        <option value="SecondaryCTCL" selected="@(inputModel?.SecondaryCTCL != "" ? "selected" : null)">Secondary CTCL</option>
                    </select>
                    <div class="input-group" style="min-width: 130px;">
                        <input type="text" id="filterValue" class="form-control mx-1" value="@(
                            !string.IsNullOrEmpty(inputModel?.PrimaryDealer) ? inputModel.PrimaryDealer.Trim() :
                            !string.IsNullOrEmpty(inputModel?.PrimaryCTCL) ? inputModel.PrimaryCTCL.Trim() :
                            !string.IsNullOrEmpty(inputModel?.SecondaryDealer) ? inputModel.SecondaryDealer.Trim() :
                            !string.IsNullOrEmpty(inputModel?.SecondaryCTCL) ? inputModel.SecondaryCTCL.Trim() :
                            inputModel?.Zone.Trim())" style="min-width:80px" />

                        <input type="hidden" id="dynamicInput" name="" value="" />
                        <button type="submit" class="btn btn-outline-primary p-2 modal-btn" style="min-width: 50px; height: 40px;">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>

            </div>
            <div class="col-12 col-lg-2 d-flex align-items-center text-dark px-3 mb-2">
                <button class="btn btn-primary modal-btn" data-bs-toggle="modal" data-bs-target="#addDealerModal">Add New</button>
            </div>
        </div>
    </div>
    <!-- Top Panel End-->

    <!-- Table Start-->
    <div class="table-wrapper border border-light mx-auto">
        @if (dealerCNTList.Count > 0)
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Zone</th>
                        <th>Primary Dealer</th>
                        <th>Primary Dealer Name</th>
                        <th>Primary CTCL Login</th>
                        <th>Secondary Dealer</th>
                        <th>Secondary Dealer Name</th>
                        <th>Secondary CTCL Login</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in dealerCNTList)
                    {
                        <tr data-rowid="@item.RowId">
                            <td>@item.Zone</td>
                            <td>@item.PrimaryDealer</td>
                            <td>@item.PrimaryDealerName</td>
                            <td>@item.PrimaryDealerCTCLLogin</td>
                            <td>@item.SecondaryDealer</td>
                            <td>@item.SecondaryDealerName</td>
                            <td>@item.SecondaryDealerCTCLLogin</td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group" aria-label="Small button group">
                                    <button id="updateBranchBtn"
                                            class="btn btn-sm btn-outline-primary me-2 update-btn"
                                            data-id="@item.RowId"
                                            title="Update"
                                            data-bs-toggle="modal"
                                            data-bs-target="#updateDealerModal">
                                        <i class="fas fa-pen"></i>
                                    </button>
                                    <button id="deleteBranchBtn"
                                            class="btn btn-sm btn-outline-danger delete-btn"
                                            data-id="@item.RowId"
                                            title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                                
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="no-records">
                <i class="bi bi-folder-x icon"></i>
                <h5>No Records Found</h5>
                <p>Try adjusting your filters or check back later.</p>
            </div>

        }
    </div>
    <!-- Table End-->

    <!-- Pagination Control Start -->
    @if(dealerCNTList.Count >= 50) {
    <div class="m-2">
        <nav aria-label="..." class="">
            <ul class="pagination justify-content-center">
                <li class="page-item @(inputModel?.Start <= 1 ? "disabled" : "")">
                    <a class="page-link"
                        href="@Url.Action("Index", new {
                        Start = inputModel.Start - 1,
                        PageSize = inputModel.PageSize,
                        Zone = inputModel.Zone,
                        PrimaryDealer = inputModel.PrimaryDealer,
                        PrimaryCTCL = inputModel.PrimaryCTCL,
                        SecondaryDealer = inputModel.SecondaryDealer,
                        SecondaryCTCL = inputModel.SecondaryCTCL
                    })">
                        Previous
                    </a>
                </li>
                <li class="page-item" aria-current="page">
                    <a class="page-link">@inputModel.Start</a>
                </li>
                <li class="page-item @(dealerCNTList.Count < 50 ? "disabled" : "")">
                    <a class="page-link"
                        href="@Url.Action("Index", new {
                        Start = inputModel.Start + 1,
                        PageSize = inputModel.PageSize,
                        Zone = inputModel.Zone,
                        PrimaryDealer = inputModel.PrimaryDealer,
                        PrimaryCTCL = inputModel.PrimaryCTCL,
                        SecondaryDealer = inputModel.SecondaryDealer,
                        SecondaryCTCL = inputModel.SecondaryCTCL
                    })">
                        Next
                    </a>
                </li>
            </ul>
        </nav>
    </div>
    }
    <!-- Pagination Control End -->
</div>
<!-- Page Content End-->


<!-- Creation Modal -->
<div class="modal fade" id="addDealerModal" tabindex="-1" aria-labelledby="addDealerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <form id="addDealerForm" method="post" action="/DealerMapping/CreateMapping">
                <div class="modal-header">
                    <h5 class="modal-title" id="addDealerModalLabel">Add Dealer Mapping</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <!-- Zone -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Zone</label>
                            <select id="zoneDropdownCreate" class="form-select" name="Zone" required>
                                <option value="">Select Zone</option>
                            </select>
                        </div>
                    </div>

                    <!-- Dealer dropdowns -->
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Primary Dealer</label>
                            <select id="primaryDealerDropdownCreate" class="form-select" name="PrimaryDealerName">
                                <option value="">Select Dealer</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Secondary Dealer</label>
                            <select id="secondaryDealerDropdownCreate" class="form-select" name="SecondaryDealerName" disabled>
                                <option value="">Select Dealer</option>
                            </select>
                        </div>

                        <!-- Dealer IDs -->
                        <div class="col-md-6">
                            <label class="form-label">Primary Dealer ID</label>
                            <input type="text" class="form-control" id="primaryDealerIdCreate" name="PrimaryDealer" value="-" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Secondary Dealer ID</label>
                            <input type="text" class="form-control" id="secondaryDealerIdCreate" name="SecondaryDealer" value="-" readonly />
                        </div>

                        <!-- CTCL Logins -->
                        <div class="col-md-6">
                            <label class="form-label">Primary CTCL Login</label>
                            <input type="text" class="form-control" id="primaryCTCLCreate" name="PrimaryDealerCTCLLogin" value="-" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Secondary CTCL Login</label>
                            <input type="text" class="form-control" id="secondaryCTCLCreate" name="SecondaryDealerCTCLLogin" value="-" readonly />
                        </div>

                        <!-- Segments -->
                        <div class="col-md-6">
                            <label class="form-label">Primary Segment</label>
                            <ul id="primarySegmentList">

                            </ul>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Secondary Segment</label>
                            <ul id="secondarySegmentList">

                            </ul>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success modal-btn">Save Mapping</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Update Modal -->
<div class="modal fade" id="updateDealerModal" tabindex="-1" aria-labelledby="updateDealerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <form id="updateDealerForm" method="post" action="/DealerMapping/UpdateMapping">
                <input type="hidden" name="RowId" id="rowIdInputUpdate" />
                <div class="modal-header">
                    <h5 class="modal-title" id="updateDealerModalLabel">Update Dealer Mapping</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <!-- Zone -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Zone</label>
                            <select id="zoneDropdownUpdate" class="form-select readonly-select" name="Zone" readonly required>
                                <option value="">Select Zone</option>
                            </select>
                        </div>
                    </div>

                    <!-- Dealer dropdowns -->
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Primary Dealer</label>
                            <select id="primaryDealerDropdownUpdate" class="form-select readonly-select" name="PrimaryDealerName" readonly>
                                <option value="">Select Dealer</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Secondary Dealer</label>
                            <select id="secondaryDealerDropdownUpdate" class="form-select" name="SecondaryDealerName">
                                <option value="">Select Dealer</option>
                            </select>
                        </div>

                        <!-- Dealer IDs -->
                        <div class="col-md-6">
                            <label class="form-label">Primary Dealer ID</label>
                            <input type="text" class="form-control readonly-select" id="primaryDealerIdUpdate" name="PrimaryDealer" value="-" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Secondary Dealer ID</label>
                            <input type="text" class="form-control" id="secondaryDealerIdUpdate" name="SecondaryDealer" value="-" readonly />
                        </div>

                        <!-- CTCL Logins -->
                        <div class="col-md-6">
                            <label class="form-label">Primary CTCL Login</label>
                            <input type="text" class="form-control readonly-select" id="primaryCTCLUpdate" name="PrimaryDealerCTCLLogin" value="-" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Secondary CTCL Login</label>
                            <input type="text" class="form-control" id="secondaryCTCLUpdate" name="SecondaryDealerCTCLLogin" value="-" readonly />
                        </div>

                        <!-- Segments -->
                        <div class="col-md-6">
                            <label class="form-label">Primary Segment</label>
                            <ul id="primarySegmentUpdate">

                            </ul>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Secondary Segment</label>
                            <ul id="secondarySegmentUpdate">

                            </ul>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success modal-btn">
                        Update Mapping
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteDealerModal" tabindex="-1" aria-labelledby="deleteDealerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-3">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteDealerModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this mapping?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

